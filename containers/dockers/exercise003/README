# From this directory, run this command. Ensure dockerfile is present in the same directory where you would run the docker build command

# Build the Image
docker build -t python-app:exerciseC --build-arg REQ_PIP_FILE=/final/requirements --build-arg FINAL_DIR_NAME=final -f dockerfile .


# Run the Image as a Container

# Remove Container once execution done..

# -e denotes the environment variables
docker run --rm --name arun-tests \
	-e firstname=Arun \
	-e lastname=Chandramouli \
	-e profession=Programmer \
	python-app:exerciseC


docker run --rm --name arun-tests \
	-e firstname=Ayush \
	-e lastname=Shah \
	-e profession=Programmer \
	python-app:exerciseC

